<!-- Begin Page Content -->
        <div class="container-fluid">

          

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Produtos Woocommerce</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th style="width: 50px;">Codigo</th>
                      <th>Nome</th>
                      <th>Preço</th>                     
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th style="width: 50px;">Codigo</th>
                      <th>Nome</th>
                      <th>Preço</th> 
                    </tr>
                  </tfoot>
                  <tbody>
                    <% @produtos.each do |produto| %>
                    <tr>
                      <td style="width: 50px;"><%= produto["id"] %></td>
                      <td><%= produto["name"] %></td>                      
                      <td>R$<%= produto["price"] %></td>                      
                    </tr>
                    <% end -%>                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>